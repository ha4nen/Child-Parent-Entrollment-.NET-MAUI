<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="MauiApp1.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:MauiApp1"
    Shell.FlyoutBehavior="Disabled"
    Title="MauiApp1">

    <TabBar>
        <Tab Title="Home" Icon="home.png">
            <ShellContent ContentTemplate="{DataTemplate local:MainPage}" Route="MainPage"/>
        </Tab>
        <Tab Title="Child" Icon="child.png">
            <ShellContent ContentTemplate="{DataTemplate local:Child}" Route="Child"/>
        </Tab>
        <Tab Title="Parent" Icon="parent.png">
            <ShellContent ContentTemplate="{DataTemplate local:Parent}" Route="Parent"/>
        </Tab>
        <Tab Title="Assign" Icon="enrollment.png">
            <ShellContent ContentTemplate="{DataTemplate local:Assign}" Route="Assign"/>
        </Tab>
        <Tab Title="Report" Icon="report.png">
            <ShellContent ContentTemplate="{DataTemplate local:Report}" Route="Report"/>
        </Tab>
    </TabBar>


</Shell>
